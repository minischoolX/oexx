<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/primaryLightColor">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/collapsed_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/collapsed_toolbar_height"
                android:background="@color/primaryLightColor"
                app:layout_collapseMode="pin">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/collapsed_toolbar_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/container_padding"
                        android:layout_marginTop="@dimen/widget_margin"
                        android:layout_marginEnd="@dimen/edx_half_margin"
                        android:layout_marginBottom="@dimen/widget_margin"
                        android:textAppearance="@style/CollapsingToolbarCollapsed"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/collapsed_toolbar_dismiss"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="The Science of Happiness " />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/collapsed_toolbar_dismiss"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/edx_half_margin"
                        android:layout_marginEnd="@dimen/edx_half_margin"
                        android:layout_marginBottom="@dimen/edx_half_margin"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toEndOf="@id/collapsed_toolbar_title"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_close"
                        app:tint="@color/neutralWhiteT" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/expanded_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/expanded_toolbar_dismiss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/expanded_toolbar_button_margin"
                    android:layout_marginEnd="@dimen/expanded_toolbar_button_margin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_close"
                    app:tint="@color/neutralWhiteT" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/course_organization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/edx_default_margin"
                    android:layout_marginTop="@dimen/widget_margin_x_double"
                    android:layout_marginEnd="@dimen/edx_default_margin"
                    android:layout_marginBottom="@dimen/edx_quarter_margin"
                    android:fontFamily="@font/inter_semi_bold"
                    android:textColor="@color/warningLight"
                    android:textSize="@dimen/edx_x_small"
                    app:layout_constraintBottom_toTopOf="@id/course_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lineHeight="@dimen/widget_margin_double"
                    tools:text="BerkeleyX" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/course_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/edx_default_margin"
                    android:layout_marginEnd="@dimen/edx_half_margin"
                    android:textAppearance="@style/CollapsingToolbarExpanded"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toTopOf="@id/course_expiry_date"
                    app:layout_constraintEnd_toStartOf="@id/course_share"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/course_organization"
                    tools:text="The Science of Happiness" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/course_share"
                    android:layout_width="@dimen/edx_default_margin"
                    android:layout_height="@dimen/edx_default_margin"
                    android:layout_marginEnd="@dimen/expanded_toolbar_button_margin"
                    android:contentDescription="@string/share_course_button"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/course_expiry_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/course_title"
                    app:layout_constraintTop_toBottomOf="@id/course_organization"
                    app:srcCompat="@drawable/ic_share"
                    app:tint="@color/neutralWhiteT"
                    tools:visibility="visible" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/course_expiry_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/edx_default_margin"
                    android:layout_marginTop="@dimen/edx_quarter_margin"
                    android:layout_marginEnd="@dimen/edx_default_margin"
                    android:textColor="@color/neutralXLight"
                    android:textSize="@dimen/edx_xx_small"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/layout_upgrade_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/course_title"
                    app:lineHeight="@dimen/edx_default_margin"
                    tools:text="Access expires 1/1/2022"
                    tools:visibility="visible" />

                <include
                    android:id="@+id/layout_upgrade_btn"
                    layout="@layout/layout_upgrade_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/edx_default_margin"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/course_expiry_date"
                    tools:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
</layout>
