<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_selection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/learn_selection_width"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_learn_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/container_padding"
            android:layout_marginEnd="@dimen/container_padding"
            android:background="@color/white"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tv_selected_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="?attr/fontSemiBold"
                android:text="@string/label_my_courses"
                android:textColor="@color/primaryDarkColor"
                android:textSize="@dimen/edx_large" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/learn_drop_down_icon_margin"
                android:src="@drawable/ic_drop_down"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_learn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_selection" />

</androidx.constraintlayout.widget.ConstraintLayout>
